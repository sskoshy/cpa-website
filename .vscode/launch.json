{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Start CRA (open browser)",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["start"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "Local:.*(http://localhost:\\d+)"
        }
      }
    ]
  }
  